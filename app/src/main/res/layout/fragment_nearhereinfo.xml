<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nhn.android.maps.NMapView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/NearHereInfo_mapView">


    </com.nhn.android.maps.NMapView>

    <ImageButton
        android:id="@+id/NearHereInfo_btnOption"
        android:layout_width="@dimen/nearhereinfo_button_size"
        android:layout_height="@dimen/nearhereinfo_button_size"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/nearhereinfo_margin"
        android:layout_marginTop="@dimen/nearhereinfo_filter_margintop"
        android:src="@drawable/fragment_nearhereinfo_mylocation" />

    <ImageButton
        android:id="@+id/NearHereInfo_btnNavi"
        android:layout_width="@dimen/nearhereinfo_button_size"
        android:layout_height="@dimen/nearhereinfo_button_size"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/nearhereinfo_margin"
        android:src="@drawable/fragment_nearhereinfo_filter" />


</FrameLayout>